---
import { CompleteNav } from "../components/navbars/CompleteNav.jsx";
import ProdNav from "../components/navbars/ProdNav.astro";
import SimpleNav from "../components/navbars/SimpleNav.astro";

interface Props {
    type: "complete" | "simple" | "prod",
    title: string,
}

const { type, title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body>
    {type === "complete" ? <CompleteNav client:only/> : type=== "simple" ? <SimpleNav/> : <ProdNav/>}
    <slot/>
</body>
</html>